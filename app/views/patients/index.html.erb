  <%= link_to "Pendientes de hoy", patients_path%>
  <%= link_to "Terminados de hoy", patients_path({:filter =>:finalizado})%>
  <%= link_to_patients_procedures @patients, :finaliza_todos_los_pendientes_de_hoy %> 
