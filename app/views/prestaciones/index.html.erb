<% admin = params[:ee] %>
<% content_for :menubar do %>
  <%= render "partials/menubar"%>
<% end %>

<% if admin %>
<div class="menu_bar">
  <%= link_to "busca y carga nuevas prestaciones", prestaciones_carganuevos_path %>
<hr />
</div>
<% end %>

<h1>Listado de prestaciones</h1>

<table class="hiliteme">
  <tr>
    <th><%= sortable "descripcion", "Descripcion" %></th>
    <th><%= sortable "punto_servicio_id", "Punto de servicio" %></th>
    <% if admin %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @prestacions.each do |prestacion| %>
  <tr>
    <td><%= prestacion.descripcion %></td>
    <td><%= if (prestacion.punto_servicio_id) 
              PuntoServicio.find(prestacion.punto_servicio_id).descripcion else "" end%></td>
    <% if admin %>
    <td><%= link_to 'Show', prestacion %></td>
    <td><%= link_to 'Edit', edit_prestacion_path(prestacion, :ee => true) %></td>
    <td><%= link_to 'Destroy', prestacion, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Prestacion', new_prestacion_path if admin%>
